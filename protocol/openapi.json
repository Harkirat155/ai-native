        "type": "object",
        "additionalProperties": false,
        "properties": {
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "reasoning": {
            "type": "string",
            "description": "Optional agent-supplied reasoning trace for audit/logs."
          }
        }
      },
      "Uri": {
        "type": "string",
        "minLength": 1,
        "description": "VS Code URI string (uri.toString())."
      },
      "Position": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "line",
          "character"
        ],
        "properties": {
          "line": {
            "type": "integer",
            "minimum": 0
          },
          "character": {
            "type": "integer",
            "minimum": 0
          }
        }
      },
      "Range": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "start",
          "end"
